# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_API_TIMEOUT=30000

# Application Configuration
REACT_APP_NAME=Healthcare Management System
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Secure Healthcare Information & Patient Management System

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_OFFLINE_MODE=false

# Security Configuration
REACT_APP_SESSION_TIMEOUT=900000
REACT_APP_MAX_LOGIN_ATTEMPTS=5
REACT_APP_PASSWORD_MIN_LENGTH=8

# UI Configuration
REACT_APP_THEME=light
REACT_APP_LANGUAGE=en
REACT_APP_TIMEZONE=UTC

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Notification Configuration
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_NOTIFICATION_SOUND=true

# Development Configuration
REACT_APP_DEV_MODE=true
REACT_APP_LOG_LEVEL=debug

# Production Configuration (uncomment for production)
# REACT_APP_ENABLE_ANALYTICS=true
# REACT_APP_ENABLE_DEBUG=false
# REACT_APP_LOG_LEVEL=error
